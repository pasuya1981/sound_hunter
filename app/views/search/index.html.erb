<ul class="pager">
  <li class="previous"><a href="#">&larr; Older</a></li>
  <li class="next"><a href="#">Newer &rarr;</a></li>
</ul>

<div class="search_result">
  <% @mixes.each do |mix| %>
    <% previe_hash = mix.info[:preview] %>
    <% description = previe_hash[:description] %>
    <% duration = previe_hash[:duration] %>
    <% tracks_count = previe_hash[:tracks_count] %>
    <% cover_urls = previe_hash[:cover_urls] %>
    <div class="panel <%= cycle("panel-default", "panel-primary", "panel-success", "panel-info", "panel-warning", "panel-danger") %>">
      <div class="panel-heading"><h3><%= description.truncate(35) %></h3></div>
      <div class="panel-body">

        <% # TODO: hide and show content %>
        <div class="content-exchange-box">
          <%= image_tag(cover_urls, class: 'img-rounded visible', size: '200x200') %>
          <div class="hidden-content">This is hidden content</div>
        </div>
       
      </div>
    <div class="panel-footer">
      <span>長度:<%= duration %></span><span>收錄曲目:<%= tracks_count %></span>
    </div>
    </div>
  <% end %>
</div>

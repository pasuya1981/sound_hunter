<!DOCTYPE html>
<html>
<head>
  <title>SoundHunter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true, :cache => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/bootstrap_3_CDN_load' %>
</head>
<body>

<header id="nav-bar-pane">
  <%= render 'layouts/header' %>
</header>


<div class="notification">
  <%= render "shared/flash_messages" %>
</div>  



<div class="top_level_container container-fixed">
  <div class="row">
    <div class="main_container col-md-12">
      <div id="ajax-page-reloader">
        <!-- Before yield -->
        <%= yield %>  
        <!-- After yield -->
      </div>
    </div>
  </div>
</div>  
<footer>
  <%# render 'shared/debug' %>
</footer>

<%= render 'shared/music_player' %>

</body>
</html>

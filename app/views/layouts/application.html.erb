<!DOCTYPE html>
<html>
<head>
  <title>SoundHunter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/bootstrap_3_CDN_load' %>
</head>
<body>

<header>
  <%= render 'layouts/header' %>
</header>

<div class="notification">
  <%= render "shared/flash_messages" %>
</div>

<div class="main_content container-fixed">
  <div class="row">
    <div class="col-xs-3"><%= render "layouts/left_panel" %></div>
    <div class="col-xs-6">
      <!-- Before yield -->
      <%= yield %>	
      <!-- After yield -->
    </div>
    <div class="col-xs-3"></div>
  </div>
</div>

<footer>
  <hr />
  <div class="debug_area">
  	<% if Rails.env == 'development' %>
  	  <%= debug(params) %>
  	<% end %>
  </div>
</footer>

</body>
</html>

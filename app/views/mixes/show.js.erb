
// Always the first line!
$("#ajax-page-reloader").html("<%= escape_javascript(render template: 'mixes/show.html.erb') %>");

// Attach small cover url on .img-container
$(".img-container").attr('cover-sm-url', "<%= @mix_cover_sm_url %>");

// Mix title visual effetc
$("#mix-name").hide(0);
$(".img-container").hover(function() {
	// Mouse hover callback
	$("#mix-name").fadeIn(200);
}, function() {
	// Mouse leave callback
	$("#mix-name").delay(500).fadeOut(200);
});

// Hide big play btn if mix is played by player
if ($("#music_player").attr('current-mix-id') == "<%= @mix_id %>") {
  $("#play-btn-lg").hide(0);
}




